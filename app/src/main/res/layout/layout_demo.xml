<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="10dp">

    <View
        android:id="@+id/imageDemo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#80C0C0C0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/songNameDemo"
        android:layout_width="300dp"
        android:layout_height="15dp"
        android:layout_marginStart="10dp"
        android:background="#80C0C0C0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageDemo"
        app:layout_constraintTop_toTopOf="@id/imageDemo" />

    <View
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="#80C0C0C0"
        app:layout_constraintBottom_toBottomOf="@id/imageDemo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageDemo" />

</androidx.constraintlayout.widget.ConstraintLayout>